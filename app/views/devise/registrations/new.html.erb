<style>
  body {background: linear-gradient(0deg, #00FFFF 0%, #F7CA18 100%);}
</style>
<br />
<br />
<div class="signup-box col-md-6 col-md-offset-3">
  <div class="box-header">
    <h2>Sign Up</h2>
  </div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class= "row">
        <div class= "col-md-6">
          <%=f.input :first_name, label: false, placeholder: "First Name", require: true, autofocus: true %>
        </div>
        <div class = "col-md-6">
          <%=f.input :last_name, label: false, placeholder: "Surname", require: true %>
        </div>
      </div>
      <%=f.input :username, label: false, placeholder: "Username", require: true %>
      <small class="form-text text-muted">We'll never share your email with anyone else.</small>
      <%= f.input :email, id: "emailField", required: true, label: false, placeholder: "Email Address" %>
      <%= f.input :password, label: false, placeholder: "Password: 6 characters minimum", required: true %>
      <%= f.input :password_confirmation, label: false, placeholder: "Repeat password", required: true %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Sign Up", class: 'btn btn-secondary' %>
    </div>
  <% end %>
  <p>Already have an account? <%= render "devise/shared/links" %></p>
</div>